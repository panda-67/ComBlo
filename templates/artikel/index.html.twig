{% extends 'base.html.twig' %}

	{% block title %}Artikel index{% endblock %}

	{% block body %}
		<h1>Artikel index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Title</th>
					<th>Content</th>
					<th>Created_on</th>
					<th>Update_on</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for artikel in artikels %}
					<tr>
						<td>{{ artikel.id }}</td>
						<td>{{ artikel.title }}</td>
						<td>{{ artikel.content }}</td>
						<td>{{ artikel.createdOn ? artikel.createdOn|date('\\U\\T\\C T - F jS, Y ', 'Asia/Bangkok') : '' }}</td>
						<td>{{ artikel.updateOn ? artikel.updateOn|date('F jS, Y \\a\\t g:i a', 'Asia/Bangkok') : '' }}</td>
						<td>
							<a href="{{ path('artikel_show', {'id': artikel.id}) }}">show</a>
							<a href="{{ path('artikel_edit', {'id': artikel.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('artikel_new') }}">Create new</a>
	{% endblock %}
