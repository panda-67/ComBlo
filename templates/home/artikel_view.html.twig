{% extends 'base.html.twig' %}

	{% block title %}Artikel{% endblock %}

	{% block body %}
		<div class="bg-accent-content border-t border-l border-b-8 border-r-8 hover:border-accent m-8 p-6">
			<div class="flex flex-col md:flex-row-reverse">
				<figure class="flex justify-center items-center">
					<div class="m-5">
						<div class="w-60 h-48 md:w-80 md:h-52 bg-center bg-gray-300 bg-cover bg-current bg-opacity-40" style="background-image: url('{{ asset('uploads/covers/' ~ artikel.coverFilename) }}'); background-blend-mode: multiply"></div>
					</div>
				</figure>
				<div class="card-body flex flex-col justify-between w-full md:border-r border-accent mx-5">
					<div>
						<h2 class="card-title text-accent">{{ artikel.title }}</h2>
						<p>{{ artikel.content|u.truncate(50, '...') }}</p>
					</div>
					<div class="card-actions flex flex-col">
						<div class="">
							<button class="btn btn-sm line-through mb-2" disabled="disabled">{{ artikel.harga|format_currency('IDR') }}</button>
							<div class="rounded-md font-semibold uppercase px-2 py-1 self-baseline text-base border border-red-600 bg-red-600 text-accent-content">{{ artikel.hargaD|format_currency('IDR') }}</div>
						</div>
						<div class="flex">
							<a class="btn btn-xs md:btn-sm btn-secondary btn-outline mr-2" href="">Purchase</a>
							<a class="btn btn-xs md:btn-sm btn-info btn-outline" href="{{ path('home') }}">All Product</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
